  keywords = {Evenness,Hill number,rarefaction,scale-dependence,Simpson's index,species richness,species–area relationship},
  annotation = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/ele.13151},
  file = {E\:\\ZoteroPortable\\Data\\profile\\storage\\VA2EZR6Y\\Chase et al. - 2018 - Embracing scale-dependence to achieve a deeper und.pdf;E\:\\ZoteroPortable\\Data\\profile\\storage\\Z7IRQUZ4\\ele.html}
