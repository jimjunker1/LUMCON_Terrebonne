  language = {en},
  keywords = {beta diversity,dissimilarity,divergence,diversity,evenness,Hill numbers,phylogenetic diversity,principle of transfer,similarity,unevenness},
  annotation = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1002/ecy.2852},
  file = {E\:\\ZoteroPortable\\Data\\profile\\storage\\8JZRJXSU\\Chao and Ricotta - 2019 - Quantifying evenness and linking it to diversity, .pdf;E\:\\ZoteroPortable\\Data\\profile\\storage\\STZH9XQQ\\ecy.html}
}

@article{chase2013,
