@article{pimiento2020,
  title = {Selective Extinction against Redundant Species Buffers Functional Diversity},
  author = {Pimiento, Catalina and Bacon, Christine D. and Silvestro, Daniele and Hendy, Austin and Jaramillo, Carlos and Zizka, Alexander and Meyer, Xavier and Antonelli, Alexandre},
